{
  "name": "murkvan",
  "author": "Vladislav Tsepilov <https://github.com/pagyew>",
  "displayName": "Murkvan",
  "description": "Watching package.json and installing dependencies if changed",
  "version": "1.1.1",
  "publisher": "pagyew",
  "icon": "images/logo.png",
  "pricing": "Free",
  "galleryBanner": {
    "color": "#F7F7ED",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Murkvan",
    "package",
    "sync",
    "lock files",
    "npm",
    "arc",
    "watch"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pagyew/vscode-murkvan/issues",
    "email": "fickleprogger@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pagyew/vscode-murkvan.git"
  },
  "homepage": "https://github.com/pagyew/vscode-murkvan/blob/main/README.md",
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/package.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "murkvan.showOutputChannel",
        "title": "Show Output Channel",
        "category": "Murkvan"
      }
    ]
  },
  "scripts": {
    "release": "bumpp",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/semver": "^7.7.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "bumpp": "^10.0.3",
    "chokidar": "^4.0.3",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "semver": "^7.7.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.7.2"
  }
}
